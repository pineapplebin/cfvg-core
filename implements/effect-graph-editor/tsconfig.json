{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM"],

    "esModuleInterop": true,
    "module": "ES2015",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,

    "jsx": "react-jsx",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "types": ["./src/env.d.ts"],

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "dev"],
  "exclude": []
}
